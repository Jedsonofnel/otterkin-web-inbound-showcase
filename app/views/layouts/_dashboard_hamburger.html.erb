<div class="hamburger-menu" data-hamburger-target="menu" hidden>
  <ul class="hamburger-menu-ul">

    <li class="hamburger-menu-li">
      <%= link_to "Commissions", dashboard_commissions_path %>
    </li>

    <% if @user.commissions.length > 0 %>
      <div class="hamburger-subsection">
        <% @user.commissions.each do |commission| %>
          <li class="hamburger-menu-li">
            <%= link_to "#{commission.artist.user.first_name} #{commission.artist.user.last_name}",
            dashboard_commission_path(commission) %>
          </li>
        <% end %>
      </div>
    <% end %>

    <li class="hamburger-menu-li">
      <%= link_to "Account settings", dashboard_settings_path %>
    </li>

    <% if artist? %>
      <li class="hamburger-menu-li">
        <%= link_to "Artist profile", artist_dashboard_profile_path %>
      </li>
      <li class="hamburger-menu-li">
        <%= link_to "Artist gallery", artist_dashboard_gallery_path %>
      </li>
    <% end %>

    <% if admin? %>
      <li class="hamburger-menu-li">
        <%= link_to "Patrons", admin_dashboard_patrons_path %>
      </li>
      <li class="hamburger-menu-li">
        <%= link_to "Artists", admin_dashboard_artists_path %>
      </li>
      <li class="hamburger-menu-li">
        <%= link_to "Subscribers", admin_dashboard_subscribers_path %>
      </li>
      <li class="hamburger-menu-li">
        <%= link_to "Articles", admin_dashboard_articles_path %>
      </li>
      <li class="hamburger-menu-li">
        <%= link_to "Newsletters", admin_dashboard_newsletters_path %>
      </li>
      <li class="hamburger-menu-li">
        <%= link_to "Spotlights", admin_dashboard_spotlights_path %>
      </li>
    <% end %>

    <div class="hamburger-menu-bottom">
      <li class="hamburger-menu-li">
        <%= link_to "Home", root_path %>
      </li>
      <li class="hamburger-menu-li">
        <%= link_to "My Atelier", artist_atelier_path %>
      </li>
    </div>
  </ul>
</div>
