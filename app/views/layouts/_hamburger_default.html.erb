<div class="hamburger-menu" data-hamburger-target="menu" hidden>
  <ul class="hamburger-menu-ul">
    <li class="hamburger-menu-li">
      <%= link_to "Join the waitlist", root_path(anchor: "subscribe") %>
    </li>
    <li class="hamburger-menu-li">
      <%= link_to "Our blog", articles_path %>
    </li>

    <div class="hamburger-menu-bottom">
      <li class="hamburger-menu-li">
        <%= link_to "Home", root_path %>
      </li>
      <% if artist? %>
        <li class="hamburger-menu-li">
          <%= link_to "My Atelier", artist_atelier_path %>
        </li>
      <% end %>
      <% if authenticated? %>
        <li class="hamburger-menu-li">
          <%= link_to "My Account", dashboard_settings_path %>
        </li>
      <% else %>
        <li class="hamburger-menu-li">
          <%= link_to "Login", login_path %>
        </li>
      <% end %>
    </div>
  </ul>
</div>
