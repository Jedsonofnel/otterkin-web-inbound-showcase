<!DOCTYPE html>
<html>
  <%= render "layouts/head" %>

  <body data-controller="hamburger">
    <%= render "layouts/atelier_header" %>
    <%= render "layouts/atelier_hamburger" %>

    <div class="sidebar-layout fw no-mobile-sidebar">
      <%= render partial: "layouts/atelier_sidebar" %>

      <main class="sidebar-main">
        <%= yield %>
